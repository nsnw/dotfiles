SECTION_DIR=${HOME}/.zsh.d/sections

function load_section() {
  source ${SECTION_DIR}/$1.zsh
}

# Load base sections
load_section config
load_section colours
load_section logging
load_section terminal
load_section functions
load_section paths
load_section utils
load_section spaceship
load_section antigen

# This has to be *after* we load antigen, otherwise it doesn't work
autoload -U +X bashcompinit && bashcompinit
autoload -U +X compinit && compinit -i

load_section vim
load_section asdf
load_section backpack
load_section ssh
load_section work/pagerduty-misc
load_section work/github
load_section work/aws
load_section work/1password
load_section work/terraform
load_section work/chef
load_section work/otp
load_section work/buildkite

